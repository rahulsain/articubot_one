<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->
    <link name="base_link">
        
    </link>

    <!-- CHASSIS LINK -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
            <geometry>
                <box size="0.4 0.3 0.15"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
            <geometry>
                <box size="0.4 0.3 0.15"/>
            </geometry>
        </collision>

        <xacro:inertial_box mass="0.5" x="0.4" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>
            Gazebo/White
        </material>
    </gazebo>


    <!-- LEFT WHEEL LINK -->
    <joint name="left_wheel_joint_front" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_front"/>
        <origin xyz="0.2 0.175 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="left_wheel_joint_center" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_center"/>
        <origin xyz="0.05 0.175 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="left_wheel_joint_back" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_back"/>
        <origin xyz="-0.1 0.175 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel_front">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.05" />
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>           
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <link name="left_wheel_center">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.05" />
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>           
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <link name="left_wheel_back">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>           
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    
    <gazebo reference="left_wheel_front">
        <material>
            Gazebo/Blue
        </material>
    </gazebo> 

    <gazebo reference="left_wheel_center">
        <material>
            Gazebo/Blue
        </material>
    </gazebo> 

    <gazebo reference="left_wheel_back">
        <material>
            Gazebo/Blue
        </material>
    </gazebo> 

    <!-- RIGHT WHEEL LINK -->
    <joint name="right_wheel_joint_front" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_front"/>
        <origin xyz="0.2 -0.175 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <joint name="right_wheel_joint_center" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_center"/>
        <origin xyz="0.05 -0.175 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>
    
    <joint name="right_wheel_joint_back" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_back"/>
        <origin xyz="-0.1 -0.175 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel_front">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.05" />
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>           
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    
    <link name="right_wheel_center">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.05" />
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>           
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <link name="right_wheel_back">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.05" />
            </geometry>
            <material name="blue"/>
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.05" />
            </geometry>           
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel_front">
        <material>
            Gazebo/Blue
        </material>
    </gazebo>

    <gazebo reference="right_wheel_center">
        <material>
            Gazebo/Blue
        </material>
    </gazebo>

    <gazebo reference="right_wheel_back">
        <material>
            Gazebo/Blue
        </material>
    </gazebo>
</robot>